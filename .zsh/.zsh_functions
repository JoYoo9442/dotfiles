venv() {
    source "$1"/bin/activate
}

javacl() {
    javac -d "$1" "$2"/*.java
}

junit() {
    java -jar ~/java/junit-platform-console-standalone-1.9.1.jar -cp "$1" --scan-class-path
}

junitc() {
    # javac -d "$1" "$2"/*.java
    # java -jar ~/java/junit-platform-console-standalone-1.9.1.jar -cp "$1" --scan-class-path
    javacl "$1" "$2"
    junit "$1"
}

editconfig() {
    mv ~/.git.really ~/.git
    cd
    vim ~/.zshrc
    echo "Don't forget to git add -f any files that are new"
}

saveconfig() {
    git add .
    git commit -m "Update config"
    git push
    mv ~/.git ~/.git.really
    source ~/.zshrc
}
